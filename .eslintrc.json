{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "printWidth": 120,
            "tabWidth": 2,
            "semi": true,
            "trailingComma": "es5"
        }],
        "import/no-extraneous-dependencies": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off"
    }
}
